{% extends 'base.html.twig' %}

{% block title %}{{app.user.firstname}}--Valider ma Commande{% endblock %}

{% block content %}
 <div class="container">
    <h2> Je passe ma commande </h2>
    <p>Choisissez vos préférences avant de passer votre commande sur La Boutique Française</p>
   
    {% set formHtml %}
     {{form_start(form, {action:path('app_order_recap')})}}
    {{form_end(form)}} 
    {# {{ form(form) }} #}
    {% endset %}
    {{formHtml|replace({'[br]':'<br>'})|raw}}

    <div class="col-md-6">
        
        <b>Récape de ma commande</b><br>
         <div class="order-summary">
                {% for key,product in cart %}
                    <div class="row {% if key > 0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img class="cart-image" src="/uploads/{{product.product.illustration}}" alt="{{product.product.name}}" height="75px">
                        </div>
                        <div class="col-8 my-auto">
                            {{product.product.name}}<br>
                            <small>{{product.product.subtitle}}</small>
                        </div>
                        <div class="col-2 my-auto">
                            x
                            {{product.quantity}}
                        </div>
                    </div>
                {% endfor %}
            </div>
        
    </div>

</div>


{% endblock %}
